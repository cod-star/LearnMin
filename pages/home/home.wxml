<!--pages/home/home.wxml-->
<text>Hello word</text>
<button size="mini">按钮</button>

<!-- 页面跳转navigator -->
<navigator url="/pages/detail/detail">详情页跳转</navigator>

<!-- navigator的属性：open-type -->
<!-- redirect 关闭当前页面，跳转到应用内，不允许跳转到tabbar，并且不能返回 -->
<navigator url="/pages/detail/detail" open-type="redirect">
  详情页跳转redirect</navigator>

<!-- switchTab 跳转到tabbar页面，关闭所有其他非tabbar页面 -->
<navigator url="/pages/about/about" open-type="switchTab">
  详情页跳转switchTab</navigator>

<!-- reLaunch关闭所有页面。打开应用中某个页面 -->
<navigator url="/pages/detail/detail" open-type="reLaunch">
  详情页跳转reLaunch</navigator>

<!-- 跳转过程传递数据 -->
<navigator url="/pages/detail/detail?name=why&age=19&height=1.88">
  详情页跳转</navigator>

<navigator url="/pages/detail/detail?name=why&age=19&height=1.88">
  {{title}}</navigator>

  <!-- 通过代码进行页面跳转 -->
  <button size="mini" bindtap="handlePushDetail">跳到详情页</button>